<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DificilActivity">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tiempoTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/chronometer"
        android:text="tiempo"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtplayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txtpuntaje1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:columnCount="4">

        <ImageButton
            android:id="@+id/btn1d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn2d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn3d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn4d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn5d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn6d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn7d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn8d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn9d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn10d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn11d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn12d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn13d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn14d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn15d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:src="@mipmap/pregunta" />

        <ImageButton
            android:id="@+id/btn16d"
            android:layout_width="89dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:src="@mipmap/pregunta" />
    </GridLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtplayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txtpuntaje2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>